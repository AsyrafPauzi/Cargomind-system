<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Clients</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><%= link_to "Dashboard" , admins_path %></li>
                    <li class="breadcrumb-item"><%= link_to "Client" , admins_manage_clients_path %></li>
                    <li class="breadcrumb-item active"><%= @client.email %></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Details Infomation</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                            <i class="fas fa-minus"></i></button>
                    </div>
                </div>
                <div class="card-body">
                    <p id="error"><%= flash[:danger] %></p>
                    <p id="notice"><%= flash[:success] %></p>
                    <%= form_for(@client, url:  admins_manage_client_path(@client.id), role:"form-horizontal") do |f|%>
                    <div class="form-group row">
                        <label for="date" class="col-sm-2 col-form-label">Email:</label>
                        <div class="col-sm-10">
                            <%= f.email_field :email, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="date" class="col-sm-2 col-form-label">Name:</label>
                        <div class="col-sm-10">
                            <%= f.text_field :name, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="date" class="col-sm-2 col-form-label">No Telephone :</label>
                        <div class="col-sm-10">
                            <%= f.text_field :no_tel, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="date" class="col-sm-2 col-form-label">Address :</label>
                        <div class="col-sm-10">
                            <%= f.text_area :address, :rows => 5,class: "form-control" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="date" class="col-sm-2 col-form-label">Role:</label>
                        <div class="col-sm-10">
                            <%= f.select :role, [["Normal", "Normal"], ["Special", "Special"]], {include_blank: "Select Role"}, {class: "form-control"} %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="date" class="col-sm-2 col-form-label">Password :</label>
                        <div class="col-sm-10">
                            <%= f.password_field :password, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="date" class="col-sm-2 col-form-label">Confirmation Password :</label>
                        <div class="col-sm-10">
                            <%= f.password_field :password_confirmation, class: 'form-control'%>
                        </div>
                    </div>
                    

                    <div class="modal-footer justify-content-center">
                        <%= f.submit 'Save', class: 'btn btn-default btn-block'%>

                    </div>

                    <% end %>
                </div>
            </div>
        </div>

</section>