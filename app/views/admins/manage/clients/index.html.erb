
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Clients</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><%= link_to "Dashboard" , admins_path %></li>
              <li class="breadcrumb-item active">Clients</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

     <!-- Main content -->
    <section class="content">
      <%= link_to "Create Client" , new_admins_manage_client_path, class:"btn btn-default my-3" %> 
      <!-- Default box -->
      <div class="card">
            <div class="card-header">
              <h3 class="card-title">Listing Clients</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="table3" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>No. </th>
                                    <th>Date Create</th>
                                    <th>Email</th>
                                    <th>Name</th>
                                    <th>No Telephone</th>
                                    <th>Address</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @client.each_with_index do |clients, index|%>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= clients.created_at.strftime("%Y-%m-%d") %></td>
                                        <td><%= clients.email %></td>
                                        <td><%= clients.name %></td>
                                        <td><%= clients.no_tel %></td>
                                        <td><%= clients.address %></td>
                                        <td> 
                                        <p class="buttons">
                                            <%= link_to '<span>View</span>'.html_safe,  admins_manage_client_path(clients.id), data: {turbolinks: false}, class: 'btn btn-primary'%>
                                            <%= link_to '<span>Delete</span>'.html_safe,  admins_manage_client_path(clients.id), :method => :delete, data: { confirm: 'Are you sure you want to delete this Client?' }, class: 'btn btn-danger'%>
                                        </p>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
      <!-- /.card -->

    </section>

<script>
$(document).ready(function() {
    $('#table3').DataTable();
} );
</script>