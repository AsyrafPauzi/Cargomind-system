<div class="col-md-3">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Progress Tracking</h3>

      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fas fa-minus"></i></button>
      </div>
    </div>
    <div class="card-body">
      <div class="col-md-12">
        <!-- The time line -->
        <div class="timeline">
          <!-- timeline time label -->
          <div class="time-label">
            <span class="bg-green"><%= @quotation.created_at.strftime("%Y-%m-%d") %></span>
          </div>

          <% if @quotation.quotation_status == "Pending"%>
            <div>
              <i class="fas fa-times bg-red"></i>
              <div class="timeline-item">
                <h3 class="timeline-header no-border">Quotation</h3>
              </div>
            </div>
          <% else %>
            <div>
              <i class="fas fa-check bg-green"></i>
              <div class="timeline-item">
                <h3 class="timeline-header no-border">Quotation Received<br/></h3>
                <% if @quotation.file_quotation.present? %>
                <div class="timeline-body">       
                      <%= link_to 'Download Quotation', @quotation.file_quotation.url, target: :_blank %>
                </div>
                  <% end %>
              </div>
            </div>
          <% end %>

          <% if @quotation.booking.present? %>
            <% if @quotation.booking.status == "Booking Confirmation"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Your Booking Confirmation is ready</h3>
                    <% if @quotation.booking.file_booking.present? %>
                  <div class="timeline-body">       
                        <%= link_to 'Download Booking Confirmation', @quotation.booking.file_booking.url, target: :_blank %>
                  </div>
                    <% end %>
                </div>
              </div>
            <% else %>
              <div>
                  <i class="fas fa-times bg-red"></i>
                  <div class="timeline-item">
                    <h3 class="timeline-header no-border"><%= link_to "Booking", booking_clients_manage_shipments_path %>Booking Confirmation not ready</h3>
                  </div>
              </div>
            <% end %>
          <% else %>
              <div>
                  <i class="fas fa-times bg-red"></i>
                  <div class="timeline-item">
                    <h3 class="timeline-header no-border"><%= link_to "Booking", booking_clients_manage_shipments_path %>Booking Confirmation not ready</h3>
                  </div>
              </div>
          <% end %>

          <% if @quotation.cargo_collection.present? %>
            <% if @quotation.cargo_collection.status == "Collected"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Cargo has been Collected</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Cargo not been Collected</h3>
                </div>
              </div>
            <% end %>
          <% else %>
            <div>
              <i class="fas fa-times bg-red"></i>
              <div class="timeline-item">
                <h3 class="timeline-header no-border">Cargo not been Collected</h3>
              </div>
            </div>
          <% end %>
          

          <% if @quotation.cargo_declaration.present? %>
            <% if @quotation.cargo_declaration.status == "Draft"%>
              <div>
                <i class="fas fa-exclamation bg-yellow"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Your Cargo Declaration Draft is ready</h3>
                    <% if @quotation.cargo_declaration.file_declaration.present? %>
                  <div class="timeline-body">       
                        <%= link_to 'Download Draft', @quotation.cargo_declaration.file_declaration.url, target: :_blank %>
                  </div>
                  <div class="timeline-footer text-center">     
                    <%= form_for(:cargo_declaration, url: client_update_users_manage_cargo_declarations_path, role:"form-horizontal", method: :patch) do |f|%>  
                        <div class="btn-group btn-block" role="group" aria-label="Basic example">
                        <%= f.submit 'Confirm', class: 'btn btn-success'%>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-declaration-reject">Reject</button>
                      </div>
                    <% end %>
                  </div>
                    <% end %>
                </div>
              </div>
            <% elsif @quotation.cargo_declaration.status == "Rejected" %>
              <div>
                <i class="fas fa-exclamation bg-yellow"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Your Cargo Declaration Feedback Pending</h3>
                </div>
              </div>
            <% elsif @quotation.cargo_declaration.status == "Confirmed" %>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Your Cargo Declaration Complete</h3>
                </div>
              </div>
            <% elsif @quotation.cargo_declaration.status == "Confirmed Cargo Declaration" %>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Your Cargo Declaration Complete</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Cargo Declaration</h3>
                </div>
              </div>
            <% end %>
          <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Cargo Declaration</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.cargo_submission.present? %>
            <% if @quotation.cargo_submission.status == "Confirmed Cargo Submission"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                    
                  <h3 class="timeline-header no-border">Cargo Submission</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                    
                  <h3 class="timeline-header no-border">Cargo Submission</h3>
                </div>
              </div>
            <% end %>
          <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Cargo Submission</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.flight_depart.present? %>
            <% if @quotation.flight_depart.status == "Confirmed Flight Depart"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Flight Depart</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Flight Depart</h3>
                </div>
              </div>
            <% end %>
          <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Flight Depart</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.attach_pre_alert.present? %>
            <% if @quotation.attach_pre_alert.status == "Confirmed Attach Pre Alert"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Your Attach Pre Alert is ready</h3>
                    <% if @quotation.attach_pre_alert.file_attach_pre_alert.present? %>
                  <div class="timeline-body">       
                        <%= link_to 'Download Attach Pre Alert', @quotation.attach_pre_alert.file_attach_pre_alert.url, target: :_blank %>
                  </div>
                    <% end %>
                </div>
              </div>
            <% else %>
                <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Attach Pre Alert</h3>
                </div>
              </div>
            <% end %>
          <% else %>
                <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Pre Alert Attach</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.billing.present? %>
            <% if @quotation.billing.status == "Confirmed Billing"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Billing</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Billing</h3>
                </div>
              </div>
            <% end %>
          <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Billing</h3>
                </div>
              </div>
          <% end %>
          
          <% if @quotation.insurance.present? %>
            <% if @quotation.insurance.status == "Confirmed Insurance"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Insurance</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Insurance</h3>
                </div>
              </div>
            <% end %>
          <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Insurance</h3>
                </div>
              </div>
          <% end %>
 
            
            
            

          <div class="time-label">
            <span class="bg-green">Complete</span>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
    <%= render partial: "clients/manage/shipments/shared/modal_declaration_reject" %>
<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });

</script>