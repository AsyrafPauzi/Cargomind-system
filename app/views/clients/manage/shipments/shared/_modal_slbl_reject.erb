  <div class="modal fade" id="modal-bl-confirmation-reject" aria-hidden="true" style="display: none;">
          <div class="modal-dialog modal-l">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Reject SL/BL Confirmation</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">Ã—</span>
                </button>
              </div>
              <div class="modal-body">
                <%= form_for(:slbl_confirmation, url: client_update_users_manage_slbl_confirmations_path, role:"form-horizontal", method: :patch) do |f|%>
                        <div class="form-group row">
                                <label for="file_declaration" class="col-sm-3 col-form-label">Upload File :</label>
                                <div class="col-sm-9">
                                    <div class="custom-file">
                                        <%= f.file_field :file_client_draft, class: 'custom-file-input'%>
