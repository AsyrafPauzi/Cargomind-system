
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Shipments</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><%= link_to "Dashboard" ,  clients_path %></li>
              <li class="breadcrumb-item active">Shipments</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <%= link_to "Create RFQ" , new_clients_manage_shipment_path, class:"btn btn-default my-3" %> 
      <!-- Default box -->
      <div class="card">
            <div class="card-header">
              <h3 class="card-title">Listing Quotations</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="table1" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Quotation ID</th>
                                    <th>Date Create</th>
                                    <th>To</th>
                                    <th>Attn</th>
                                    <th>Quotation Type</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @quotation.each do |quotations|%>
                                    <tr>
                                        <td><%= quotations.quotation_id %></td>
                                        <td><%= quotations.created_at.strftime("%Y-%m-%d") %></td>
                                        <td><%= quotations.to %></td>
                                        <td><%= quotations.attn %></td>
                                        <td><%= quotations.type_quotation %></td>
                                        <td><%= quotations.status %></td>
                                        <td> 
                                        <p class="buttons">
                                            <%= link_to '<span>View</span>'.html_safe,  clients_manage_shipment_path(quotations.quotation_id), data: {turbolinks: false}, class: 'btn btn-primary'%>
                                            <%= link_to '<span>Delete</span>'.html_safe,  clients_manage_shipment_path(quotations.quotation_id), :method => :delete, data: { confirm: 'Are you sure you want to delete this quotation?' }, class: 'btn btn-danger'%>
                                        </p>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
      <!-- /.card -->

    </section>

<script>
$(document).ready(function() {
    $('#table1').DataTable();
} );
</script>