
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Dashboard</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item active"><a href="#">Dashboard</a></li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Recents 10 Quotations</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive-md p-0">
                <table class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th width="10%">Quotation ID</th>
                                    <th width="10%">Date Create</th>
                                    <th width="20%">Shipper</th>
                                    <th width="20%">Consignee</th>
                                    <th width="10%">Quotation Type</th>
                                    <th width="10%">Mode Of Shipment</th>
                                    <th width="10%">Status</th>
                                    <th width="10%">Quotation Status</th>
                                    <th width="10%">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @quotation.each do |quotations|%>
                                    <tr>
                                        <td><%= quotations.quotation_id %></td>
                                        <td><%= quotations.created_at.strftime("%Y-%m-%d") %></td>
                                        <td><%= quotations.shipper %></td>
                                        <td><%= quotations.consignee %></td>
                                        <td><%= quotations.type_quotation %></td>
                                        <td><%= quotations.mode_of_shipment %></td>
                                        <td><%= quotations.status %></td>
                                        <td><%= quotations.quotation_status.present? ? quotations.quotation_status : ""  %></td>
                                        <td> 
                                        <div class="btn-group">
                                            <%= link_to '<span>View</span>'.html_safe,  clients_manage_shipment_path(quotations.quotation_id), data: {turbolinks: false}, class: 'btn btn-primary'%>
                                            <%= link_to '<span>Delete</span>'.html_safe,  clients_manage_shipment_path(quotations.quotation_id), :method => :delete, data: { confirm: 'Are you sure you want to delete this quotation?' }, class: 'btn btn-danger '%>
                                        </div>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
              </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>