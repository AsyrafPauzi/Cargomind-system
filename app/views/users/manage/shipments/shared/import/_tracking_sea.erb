<div class="col-md-3">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Progress Tracking</h3>

      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fas fa-minus"></i></button>
      </div>
    </div>
    <div class="card-body">
      <div class="col-md-12">
        <!-- The time line -->
        <div class="timeline">
          <!-- timeline time label -->
          <div class="time-label">
            <span class="bg-red"><%= @quotation.created_at.strftime("%Y-%m-%d") %></span>
          </div>
          
          <% if @quotation.quotation_status == "Pending"%>``
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Quotation</h3>
                </div>
              </div>
          <% else %>
                <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Quotation</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.booking.present? %>
            <% if @quotation.booking.status == "Booking Confirmation"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Booking</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Booking</h3>
                </div>
              </div>
            <% end %>
          <% else %>
            <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Booking</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.cargo_collection.present? %>
            <% if @quotation.weight_type == "FCL" %>
                <% if @quotation.cargo_collection.status == "Empty Send" %>
                  <div>
                    <i class="fas fa-exclamation bg-yellow"></i>
                    <div class="timeline-item">
                        
                      <h3 class="timeline-header no-border">Empty Send</h3>
                    </div>
                  </div>
                <% elsif @quotation.cargo_collection.status == "Laden Collected"%>
                  <div>
                    <i class="fas fa-check bg-green"></i>
                    <div class="timeline-item">
                        
                      <h3 class="timeline-header no-border">Laden Collected</h3>
                    </div>
                  </div>
                <% else %>
                  <div>
                    <i class="fas fa-times bg-red"></i>
                    <div class="timeline-item">
                        
                      <h3 class="timeline-header no-border">Cargo Collection</h3>
                    </div>
                  </div>
                <% end %>
            <% else %>
                <% if @quotation.cargo_collection.status == "On Plan" %>
                  <div>
                    <i class="fas fa-exclamation bg-yellow"></i>
                    <div class="timeline-item">
                        
                      <h3 class="timeline-header no-border">On Plan</h3>
                    </div>
                  </div>
                <% elsif @quotation.cargo_collection.status == "Collected"%>
                  <div>
                    <i class="fas fa-check bg-green"></i>
                    <div class="timeline-item">
                        
                      <h3 class="timeline-header no-border">Collected</h3>
                    </div>
                  </div>
                <% else %>
                  <div>
                    <i class="fas fa-times bg-red"></i>
                    <div class="timeline-item">
                        
                      <h3 class="timeline-header no-border">Cargo Collection</h3>
                    </div>
                  </div>
                <% end %>
            <% end %>
          <% else %>
            <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                    
                  <h3 class="timeline-header no-border">Cargo Collection</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.cargo_declaration.present? %>
            <% if @quotation.cargo_declaration.status == "Confirmed Cargo Declaration"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                    
                  <h3 class="timeline-header no-border">Cargo Declaration</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                    
                  <h3 class="timeline-header no-border">Cargo Declaration</h3>
                </div>
              </div>
            <% end %>
          <% else %>
            <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                    
                  <h3 class="timeline-header no-border">Cargo Declaration</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.slbl_confirmation.present? %>
            <% if @quotation.slbl_confirmation.status == "SL/BL Confirmed"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                    
                  <h3 class="timeline-header no-border">SL/BL Confirmation</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                    
                  <h3 class="timeline-header no-border">SL/BL Confirmation</h3>
                </div>
              </div>
            <% end %>
          <% else %>
            <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                    
                  <h3 class="timeline-header no-border">SL/BL Confirmation</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.weight_type == "LCL" %>
            <% if @quotation.vessel_depart.present? %>
              <% if @quotation.vessel_depart.status == "Confirmed Vessel Depart"%>
                <div>
                  <i class="fas fa-check bg-green"></i>
                  <div class="timeline-item">
                    <h3 class="timeline-header no-border">Vessel Depart</h3>
                  </div>
                </div>
              <% else %>
                <div>
                  <i class="fas fa-times bg-red"></i>
                  <div class="timeline-item">
                    <h3 class="timeline-header no-border">Vessel Depart</h3>
                  </div>
                </div>
              <% end %>
            <% else %>
                <div>
                  <i class="fas fa-times bg-red"></i>
                  <div class="timeline-item">
                    <h3 class="timeline-header no-border">Flight Depart</h3>
                  </div>
                </div>
            <% end %>
          <% end %>

          <% if @quotation.attach_pre_alert.present? %>
            <% if @quotation.attach_pre_alert.status == "Confirmed Attach Pre Alert"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Pre Alert Attach</h3>
                </div>
              </div>
            <% else %>
                <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Pre Alert Attach</h3>
                </div>
              </div>
            <% end %>
          <% else %>
                <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Pre Alert Attach</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.billing.present? %>
            <% if @quotation.billing.status == "Confirmed Billing"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Billing</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Billing</h3>
                </div>
              </div>
            <% end %>
          <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Billing</h3>
                </div>
              </div>
          <% end %>

          <% if @quotation.insurance.present? %>
            <% if @quotation.insurance.status == "Confirmed Insurance"%>
              <div>
                <i class="fas fa-check bg-green"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Insurance</h3>
                </div>
              </div>
            <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Insurance</h3>
                </div>
              </div>
            <% end %>
          <% else %>
              <div>
                <i class="fas fa-times bg-red"></i>
                <div class="timeline-item">
                  <h3 class="timeline-header no-border">Insurance</h3>
                </div>
              </div>
          <% end %>
      
          
 
            
            
            

          <div class="time-label">
            <span class="bg-green">Complete</span>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>