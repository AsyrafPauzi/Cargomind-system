<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Shipments</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to "Dashboard" , users_path %></li>
          <li class="breadcrumb-item active">Shipments</li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <!-- Default box -->
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Listing Quotations</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table id="table1" class="table table-striped table-bordered " style="width:100%">
        <thead>
          <tr>
            <th width="8%">Quotation ID</th>
            <th width="8%">Date Create</th>
            <th width="13%">Shipper</th>
            <th width="13%">Consignee</th>
            <th width="10%">Quotation Type</th>
            <th width="8%">Status</th>
            <th width="20%">Staff Status</th>
            <th width="10%">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @quotation.where(user_id: current_user.id).each do |quotations|%>
          <tr>
            <td><%= quotations.quotation_id %></td>
            <td><%= quotations.created_at.strftime("%Y-%m-%d") %></td>
            <td><%= quotations.shipper %></td>
            <td><%= quotations.consignee %></td>
            <td><%= quotations.type_quotation %></td>
            <td><%= quotations.status %></td>
            <td >
            <div style="height: 100px;overflow-y: auto; overflow-x: hidden; ">
            <% current_user.user_statuses.where(quotation_id: quotations.id).each do |u| %>
                <label><%= u.created_at.strftime("%Y-%m-%d") %></label>
                <label><%= u.status %></label><br/>
            <% end %>
            </div>
            </td>

            <td>
              <p class="buttons">
                <%= link_to '<span>View</span>'.html_safe,  users_manage_shipment_path(quotations.quotation_id), data: {turbolinks: false}, class: 'btn btn-primary'%>
                <%= link_to '<span>Delete</span>'.html_safe,  users_manage_shipment_path(quotations.quotation_id), :method => :delete, data: { confirm: 'Are you sure you want to delete this quotation?' }, class: 'btn btn-danger'%>
              </p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->

</section>

<script>
  $(document).ready(function () {
    $('#table1').DataTable();
  });
</script>