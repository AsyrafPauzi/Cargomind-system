
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Dashboard</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item active"><a href="#">Dashboard</a></li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Recents 10 Jobs</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Quotation ID</th>
                                    <th>Date Create</th>
                                    <th>To</th>
                                    <th>Attn</th>
                                    <th>Quotation Type</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @quotation.each do |quotations|%>
                                    <tr>
                                        <td><%= quotations.quotation_id %></td>
                                        <td><%= quotations.created_at.strftime("%Y-%m-%d") %></td>
                                        <td><%= quotations.to %></td>
                                        <td><%= quotations.attn %></td>
                                        <td><%= quotations.type_quotation %></td>
                                        <td><%= quotations.status %></td>
                                        <td> 
                                        <p class="buttons">
                                            <%= link_to '<span class="icon is-small"><i class="fa fa-cog"></i></span>'.html_safe, users_manage_shipment_path(quotations.quotation_id), data: {turbolinks: false}, class: 'btn btn-primary'%>
                                            <%= link_to '<span class="icon is-small"><i class="fa fa-times"></i></span>'.html_safe, users_manage_shipment_path(quotations.quotation_id), :method => :delete, class: 'btn btn-danger'%>
                                        </p>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
              </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>