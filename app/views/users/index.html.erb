<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active"><a href="#">Dashboard</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Quotation Listing</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table id="table1" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th width="10%">Code</th>
                                    <th width="10%">Company Name</th>
                                    <th width="15%">Mode Of Shipment</th>
                                    <th width="15%">Tracking</th>
                                    <th width="10%">Status(Internal)</th>
                                    <th width="10%">Remarks</th>
                                    <th width="10%">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @quotation_2.each do |quotations|%>
                                <tr>
                                    <td><%= quotations.quotation_code %></td>
                                    <td><%= quotations.created_at.strftime("%Y-%m-%d") %></td>
                                    <td><%= quotations.collection_company_name %></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <div class="btn-group">
                                            <% if quotations.user_id.present? %>
                                            <%= link_to '<span>View</span>'.html_safe, users_manage_shipment_path(quotations.quotation_code), data: {turbolinks: false}, class: 'btn btn-primary'%>
                                            <% else %>
                                            <%= link_to '<span>View</span>'.html_safe, users_manage_shipment_path(quotations.quotation_code), data: {turbolinks: false}, class: 'btn btn-primary'%>
                                            <% end %>
                                            <%= link_to '<span>Delete</span>'.html_safe,  users_manage_shipment_path(quotations.quotation_code), :method => :delete, data: { confirm: 'Are you sure you want to delete this quotation?' }, class: 'btn btn-danger'%>
                                        </div>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

